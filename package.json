{
  "name": "@hyper-tuner/types",
  "description": "HyperTuner common TypeScript types",
  "version": "0.4.2",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyper-tuner/types"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "start": "tsc --watch",
